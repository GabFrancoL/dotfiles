[colors]
background = #282828 
background-alt = #504945
foreground = #ebdbb2
alert = #cc241d

[bar/root]
width = 100%
height = 32
fixed-center = true
monitor = ${env:MONITOR:HDMI-0}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

module-margin-right = 1

font-0 = Fira Code:type=bold:pixelsize=12;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Font Awesome 5 Free Regular:pixelsize=13;1
font-3 = Font Awesome 5 Free Solid:pixelsize=13;1
font-4 = Font Awesome 5 Brands:pixelsize=13;1

cursor-click = pointer
cursor-scroll = ns-resize

[bar/barra1]
inherit = bar/root
width =  100%
radius = 4
border-left-size = 5%
border-right-size = 5%
border-top-size = 14

modules-left = updates-pacman-aurhelper spotify
modules-center = i3
modules-right = openweathermap-simple memory cpu pulseaudio date

[bar/barra2]
inherit = bar/root
bottom = true
width = 100%
height = 30
modules-left = network
modules-center = xwindow

tray-position = right

[module/spotify]
type = custom/script
interval = 1
format-prefix = "  "
format = <label>
exec = python /home/gabriel/.config/polybar/scripts/spotify.py -f ' {artist} - {song} '
format-underline = #b8bb26
format-prefix-background = #b8bb26
format-background = ${colors.background-alt}
click-left = playerctl --player=spotify play-pause 
click-right = playerctl --player=spotify next 
click-middle = playerctl --player=spotify previous

[module/network]
type = internal/network
interface = enp4s0
interval = 1
accumulate-stats = true
label-connected = " %downspeed% %upspeed%"
label-disconnected = Não conectado
label-connected-foreground = ${colors.foreground}
label-disconnected-foreground = ${colors.foreground}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/openweathermap-simple]
type = custom/script
exec = /home/gabriel/.config/polybar/scripts/openweathermap-simple.sh
interval = 600
format-prefix = "  "
format-prefix-background = #689d6a
format-background = ${colors.background-alt} 
format-underline = #689d6a

[module/updates-pacman-aurhelper]
type = custom/script
exec = ~/.config/polybar/scripts/updates-pacman-aurhelper.sh
interval = 600
format-prefix = "  "
format-prefix-background = #d65d0e
format-background = ${colors.background-alt}
format-underline = #d65d0e
content = ${glyph.gleft}
click-left = alacritty --hold -e paru -Qum && checkupdates

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

; Focused 
label-focused = %icon%
label-focused-background = ${colors.background}
;label-focused-underline= ${colors.foreground}
label-focused-padding = 1
label-focused-foreground = #d79921

; Unfocused
label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}

; Visible
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; Urgent
label-urgent = %icon%
label-urgent-background = ${colors.background}
label-urgent-padding = 1
label-urgent-foreground = #ff5555

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = #83a598
format-underline = #83a598
format-background = ${colors.background-alt}
label = " %percentage:2%% "

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = #fb4934
format-underline = #fb4934
format-background = ${colors.background-alt}
label = " %percentage_used%% "

[module/wlan]
type = internal/network
interface = net1
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 1

date = 
;date-alt = " %d/%m/%Y"

time = " %H:%M "
;time-alt = %H:%M:%S

format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = #d3869b
format-underline = #d3869b
format-background = ${colors.background-alt}

label = %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume><label-volume>
label-volume = " %percentage%% "
label-volume-foreground = ${root.foreground}
label-volume-background = ${colors.background-alt}
format-volume-background = #fabd2f
format-volume-underline = #fabd2f

label-muted = "    "
;label-muted-foreground = #8be9fd
label-muted-background = #ffb86c

click-right = pavucontrol

ramp-volume-0 = "  "
ramp-volume-1 = "  "
ramp-volume-2 = "  "

[module/powermenu]
type = custom/menu

expand-right = true

;format-spacing = 1

label-open = "  "
label-open-foreground = ${colors.foreground}
label-open-background = #cc241d
label-close = "  "
label-close-foreground = ${colors.foreground}
label-close-background = #cc241d
;label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0-background = #504945
menu-0-0 = " Reiniciar "
menu-0-0-exec = systemctl reboot
menu-0-1-background = #504945
menu-0-1 = "Desligar "
menu-0-1-exec = systemctl poweroff

[settings]
